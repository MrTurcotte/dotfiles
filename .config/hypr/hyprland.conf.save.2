general {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    gaps_in = 4
    gaps_out = 8
    border_size = 4
#    col.active_border = rgba(5e81acff) rgba(eceff4ff) 45deg
    col.active_border = $color11
    col.inactive_border = rgba(4c566aff)
#    no_cursor_warps = 0

    layout = master
}

decoration {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    active_opacity = 1
    inactive_opacity = 1
    fullscreen_opacity = 1

    rounding = 15

    drop_shadow = yes
    shadow_range = 20
    shadow_render_power = 10
    col.shadow = rgba(00000099)
#    col.shadow = rgba(4c566acc)

#    blur = yes
#    blur_size = 4
#    blur_passes = 3
#    blur_new_optimizations = on
	
    blur {
        enabled = yes
        size = 2
        passes = 4
        new_optimizations = on
        vibrancy = 0.3
        vibrancy_darkness = 0
        noise = 0
        contrast = 0.9
        brightness = 0.82
        xray = no
    }
}

